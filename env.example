# =============================================================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# =============================================================================

# Окружение (development/production)
ENVIRONMENT=development
DEBUG=true

# Секретный ключ для JWT токенов (сгенерировать: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================================================
# БАЗА ДАННЫХ
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/realestate_bot

# Redis
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# TELEGRAM BOT
# =============================================================================

# Токен бота (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# =============================================================================
# AI СЕРВИСЫ
# =============================================================================

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Yandex SpeechKit (fallback для speech-to-text)
YANDEX_SPEECHKIT_API_KEY=your-yandex-speechkit-api-key-here

# Yandex Maps (геокодирование и маршруты)
YANDEX_MAPS_API_KEY=your-yandex-maps-api-key-here

# =============================================================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# =============================================================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# НАСТРОЙКИ ФАЙЛОВ
# =============================================================================

# Путь для временных файлов
TEMP_DIR=./temp

# Максимальный размер файла (в байтах)
MAX_FILE_SIZE=10485760  # 10MB

# =============================================================================
# НАСТРОЙКИ КАЛЕНДАРЯ
# =============================================================================

# Временная зона по умолчанию
DEFAULT_TIMEZONE=Europe/Moscow
# REMINDER_INTERVALS=15, 30, 60, 1440

# =============================================================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# =============================================================================

# Время жизни JWT токена (в секундах)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Максимальное количество попыток входа
MAX_LOGIN_ATTEMPTS=5

# Блокировка после неудачных попыток (в минутах)
LOGIN_BLOCK_DURATION=15

# =============================================================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# =============================================================================

# Количество воркеров для FastAPI
WORKERS=4

# Количество воркеров для Celery
CELERY_WORKERS=2

# Таймаут для AI запросов (в секундах)
AI_REQUEST_TIMEOUT=30

# =============================================================================
# НАСТРОЙКИ КЭШИРОВАНИЯ
# =============================================================================

# Время жизни кэша (в секундах)
CACHE_TTL=3600

# Время жизни кэша геокодирования (в секундах)
GEOCODE_CACHE_TTL=86400  # 24 часа 